#!/usr/bin/env bash

#shellcheck source=../common.profile
source "$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/common.profile"
require_non_root

repo="https://github.com/kmmiles/dotfiles"

if [ ! -d "$HOME/dotfiles" ]; then
  logmsg "Checking out \"$repo\" to \"$HOME/dotfiles\""
  git -C "$HOME" clone "$repo"
fi

logmsg "Running \"dotfiles/bin/link\""

"$HOME"/dotfiles/bin/install-home-tools
"$HOME"/dotfiles/bin/link
