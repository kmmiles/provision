#!/bin/bash

#shellcheck source=../lib/provision.sh
source "$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/lib/provision.sh"
lib_init

log_msg "Installing base packages"

sudo apt --no-install-recommends -y install \
  apt-transport-https \
  apt-file \
  bash \
  sudo \
  git \
  curl \
  vim \
  tmux \
  man-db \
  manpages \
  unzip \
  bzip2 \
  xz-utils \
  tree \
  ncdu



