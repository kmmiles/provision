#!/bin/bash

#shellcheck source=../lib/provision.sh
source "$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/lib/provision.sh"
lib_init

if ! chkpath flutter; then
  log_msg "Installing flutter"
  sudo apt --no-install-recommends -y install \
    build-essential \
    bash \
    curl \
    git \
    zip \
    unzip \
    xz-utils \
    libglu1-mesa

  flutter_dir="$("$__ROOT"/bin/ghclone -s -b stable flutter/flutter)"
  "$flutter_dir"/bin/flutter precache
fi
