#!/bin/bash

#shellcheck source=../lib/provision.sh
source "$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/lib/provision.sh"
lib_init

log_msg "Installing base dev tools"
sudo apt --no-install-recommends -y install \
  build-essential \
  clang \
  clang-tidy \
  manpages-dev \
  libncurses-dev \
  python-is-python3 \
  bison \
  flex \
  libssl-dev \
  libelf-dev \
  shellcheck \
  jq
