#!/bin/bash

#shellcheck source=../lib.sh
source "$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/lib.sh"
lib_init

if ! chkpath clang python flex jq; then
  log_msg "Installing base dev tools"
  sudo apt --no-install-recommends -y install \
    build-essential \
    clang \
    manpages-dev \
    libncurses-dev \
    python \
    python-is-python3 \
    bison \
    flex \
    libssl-dev \
    libelf-dev \
    shellcheck \
    jq
fi
