#!/bin/bash

set -eu

if [[ ! -d "$HOME"/Code/provision ]]; then
  mkdir -p "$HOME"/Code
  git clone https://github.com/kmmiles/provision.git "$HOME"/Code/provision
fi

case "${TYPE:-}" in
  workstation)
    "$HOME"/Code/provision/bin/workstation
    ;;
  useronly)
    "$HOME"/Code/provision/bin/useronly
    ;;
  *)
    echo "Invalid TYPE"
    exit 1
    ;;
esac
